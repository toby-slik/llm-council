{
  "version": 2,
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "api/index.py"
    },
    {
      "source": "/(.*)",
      "destination": "/frontend/dist/$1"
    }
  ],
  "framework": "vite",
  "installCommand": "npm install && cd .. && uv pip install -r requirements.txt",
  "build": {
    "env": {
      "PYTHON_VERSION": "3.10"
    }
  }
}
